<configuration>
  <system.web>
    <compilation debug="true" targetFramework="4.0"/>
    <httpRuntime/>
    <authentication mode="Forms">
      <forms loginUrl="Inicio.aspx" timeout ="20" />
    </authentication>
    
    <authorization>
      <allow users="*" />
    </authorization>
    
  </system.web>

  <location path="alumno">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>

  <location path="profesor">
    <system.web>
      <authorization>
        <allow users="profesor"/>
        <allow users="vadillo@ehu.es"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>

  <location path="profesor/ExportarTareas.aspx">
    <system.web>
      <authorization>
        <allow users="vadillo@ehu.es"/>
        <deny users="*"/>
      </authorization>
    </system.web>
  </location>
</configuration>
